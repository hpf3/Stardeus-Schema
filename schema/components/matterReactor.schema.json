{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "Component": {
            "const": "MatterReactor"
        },
        "Properties": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "Key": {
                        "enum": [
                            "MaxRate",
                            "Efficiency",
                            "CarbonBuildupSpeed"
                        ]
                    }
                },
                "allOf": [
                    {
                        "if": {
                            "properties": {
                                "Key": {
                                    "const": "MaxRate"
                                }
                            }
                        },
                        "then": {
                            "$ref": "../types.schema.json#/definitions/Int"
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "Key": {
                                    "enum": [
                                        "Efficiency",
                                        "CarbonBuildupSpeed"
                                    ]
                                }
                            }
                        },
                        "then": {
                            "$ref": "../types.schema.json#/definitions/Float"
                        }
                    }
                ]
            }
        }
    },
    "required": [
        "Component",
        "Properties"
    ]
}