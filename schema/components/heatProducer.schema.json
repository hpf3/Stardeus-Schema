{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "Component": {
            "const": "HeatProducer"
        },
        "Properties": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "Key": {
                        "enum": [
                            "Rate",
                            "Range",
                            "CheckSameArea"
                        ]
                    }
                },
                "allOf": [
                    {
                        "if": {
                            "properties": {
                                "Key": {
                                    "const": "Rate"
                                }
                            }
                        },
                        "then": {
                            "$ref": "../types.schema.json#/definitions/Float"
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "Key": {
                                    "const": "Range"
                                }
                            }
                        },
                        "then": {
                            "$ref": "../types.schema.json#/definitions/Int"
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "Key": {
                                    "const": "CheckSameArea"
                                }
                            }
                        },
                        "then": {
                            "$ref": "../types.schema.json#/definitions/Bool"
                        }
                    }
                ]
            }
        }
    },
    "required": ["Component", "Properties"]
}