{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "Component": {
            "const": "Flammable"
        },
        "Properties": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "Key": {
                        "enum": [
                            "IgnitionTemperatureCelsius",
                            "FireChance",
                            "FlammabilityCurve",
                            "ExplosivenessCurve",
                            "IsTemperatureResistent"
                        ]
                    }
                },
                "allOf": [
                    {
                        "if": {
                            "properties": {
                                "Key": {
                                    "const": "IgnitionTemperatureCelsius"
                                }
                            }
                        },
                        "then": {
                            "$ref": "https://raw.githubusercontent.com/hpf3/Stardeus-Schema/stable-web/schema/types.schema.json#/definitions/Int"
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "Key": {
                                    "const": "FireChance"
                                }
                            }
                        },
                        "then": {
                            "$ref": "https://raw.githubusercontent.com/hpf3/Stardeus-Schema/stable-web/schema/types.schema.json#/definitions/Float"
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "Key": {
                                    "enum": [
                                        "FlammabilityCurve",
                                        "ExplosivenessCurve"
                                    ]
                                }
                            }
                        },
                        "then": {
                            "oneOf": [
                                {
                                    "$ref": "https://raw.githubusercontent.com/hpf3/Stardeus-Schema/stable-web/schema/types.schema.json#/definitions/Curve"
                                },
                                {
                                    "$ref": "https://raw.githubusercontent.com/hpf3/Stardeus-Schema/stable-web/schema/types.schema.json#/definitions/FloatSet"
                                }
                            ]
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "Key": {
                                    "const": "IsTemperatureResistent"
                                }
                            }
                        },
                        "then": {
                            "$ref": "https://raw.githubusercontent.com/hpf3/Stardeus-Schema/stable-web/schema/types.schema.json#/definitions/Bool"
                        }
                    }
                ]
            }
        }
    },
    "required": ["Component", "Properties"]
}