{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "Component": {
            "const": "OperatableDevice"
        },
        "Properties": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "Key": {
                        "enum": [
                            "JobType",
                            "AnimationType",
                            "OperatorOffsets"
                        ]
                    }
                },
                "allOf": [
                    {
                        "if": {
                            "properties": {
                                "Key": {
                                    "const": "JobType"
                                }
                            }
                        },
                        "then": {
                            "$ref": "https://raw.githubusercontent.com/hpf3/Stardeus-Schema/stable-web/schema/types.schema.json#/definitions/JobType"
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "Key": {
                                    "const": "AnimationType"
                                }
                            }
                        },
                        "then": {
                            "$ref": "https://raw.githubusercontent.com/hpf3/Stardeus-Schema/stable-web/schema/types.schema.json#/definitions/AnimationType"
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "Key": {
                                    "const": "OperatorOffsets"
                                }
                            }
                        },
                        "then": {
                            "$ref": "https://raw.githubusercontent.com/hpf3/Stardeus-Schema/stable-web/schema/types.schema.json#/definitions/Vector2Set"
                        }
                    }
                ]
            }
        }
    },
    "required": ["Component", "Properties"]
}