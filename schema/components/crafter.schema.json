{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "Component": {
            "const": "Crafter"
        },
        "Properties": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "Key": {
                        "enum": [
                            "UIItemIcon",
                            "CraftKey",
                            "ProgressBarKey",
                            "CompatibleTypes",
                            "MaxBatchSize",
                            "IdleWarnDefault",
                            "IsOperatorRequired",
                            "SpeedMultiplier",
                            "AutoHaulProduct",
                            "DefaultPriority"
                        ]
                    }
                },
                "allOf": [
                    {
                        "if": {
                            "properties": {
                                "Key": {
                                    "enum": [
                                        "UIItemIcon",
                                        "CraftKey",
                                        "ProgressBarKey"
                                    ]
                                }
                            }
                        },
                        "then": {
                            "$ref": "https://raw.githubusercontent.com/hpf3/Stardeus-Schema/stable-web/schema/types.schema.json#/definitions/String"
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "Key": {
                                    "const": "CompatibleTypes"
                                }
                            }
                        },
                        "then": {
                            "$ref": "https://raw.githubusercontent.com/hpf3/Stardeus-Schema/stable-web/schema/types.schema.json#/definitions/StringSet"
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "Key": {
                                    "enum": ["MaxBatchSize","DefaultPriority"]
                                }
                            }
                        },
                        "then": {
                            "$ref": "https://raw.githubusercontent.com/hpf3/Stardeus-Schema/stable-web/schema/types.schema.json#/definitions/Int"
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "Key": {
                                    "enum": [
                                        "IdleWarnDefault",
                                        "IsOperatorRequired",
                                        "AutoHaulProduct"
                                    ]
                                }
                            }
                        },
                        "then": {
                            "$ref": "https://raw.githubusercontent.com/hpf3/Stardeus-Schema/stable-web/schema/types.schema.json#/definitions/Bool"
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "Key": {
                                    "const": "SpeedMultiplier"
                                }
                            }
                        },
                        "then": {
                            "$ref": "https://raw.githubusercontent.com/hpf3/Stardeus-Schema/stable-web/schema/types.schema.json#/definitions/Float"
                        }
                    }
                ]
            }
        }
    },
    "required": ["Component", "Properties"]
}